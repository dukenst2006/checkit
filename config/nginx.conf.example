server {
  set $host_path "{{ PATH_TO }}/fb-seed";

  server_name fbseed.dev;
  listen 80;
  charset utf-8;
  expires -1;
  add_header "X-UA-Compatible" "IE=Edge,chrome=1";
  client_max_body_size 100m;

  root $host_path/public;

  location ~ ^/api(/?)(.*) {
    proxy_pass http://localhost:8080/$2;
  }

  location / {
    try_files $uri /index.html;
  }
}
